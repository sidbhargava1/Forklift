# General
PROJECT_NAME=codex-app-boilerplate
ENVIRONMENT=development
BACKEND_CORS_ORIGINS=http://localhost:5173

# Postgres
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
LLM_CACHE_ENABLED=true
OPENAI_CACHE_TTL_SECONDS=3600

# Backend
DATABASE_URL=postgresql+psycopg://app_user:app_password@db:5432/app_db
AUTH_ENABLED=false
# Domain only (no protocol), e.g. your-tenant.us.auth0.com
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=your-api-audience
AUTH0_ISSUER=https://your-tenant.us.auth0.com/
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
PROMPTS_DIR=/app/prompts

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_ENABLE_AUTH=false
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-spa-client-id
VITE_AUTH0_AUDIENCE=your-api-audience
VITE_AUTH0_REDIRECT_URI=http://localhost:5173
